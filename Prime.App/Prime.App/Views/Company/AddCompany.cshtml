@model Prime.App.Models.Company

@{
    ViewBag.Title = "Add Companies";
}

<div class="form-horizontal">
    <hr />
    <div class="Col-md-12">
        <form asp-controller="Company" asp-action="AddCompany">
            <div class="form-group">
                <div class="row">
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <input name="Name" asp-for="Name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Address</label>
                        <input name="Address" asp-for="Address" class="form-control" />
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <button type="submit" value="Save">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
